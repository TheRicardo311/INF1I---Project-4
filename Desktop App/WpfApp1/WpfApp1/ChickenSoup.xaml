<Window x:Class="App1.ChickenSoup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App1"
        mc:Ignorable="d"
        Title="Chicken Soup" Height="720" Width="1280"
        Background="Black">
    <Border Padding="10">
        <StackPanel>
            <StackPanel>
                <TextBlock Margin="0 10 0 10" Foreground="White">Main Dish</TextBlock>
            </StackPanel>
            <!-- Buttons and search bar -->
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>


                </Grid.ColumnDefinitions>

                <Button Cursor="Hand" x:Name="DHomeButton" Click="DHomeButton_Click" Grid.Column="0" Content="Home" Background="White"/>
                <Button Cursor="Hand" x:Name="DPizzaButton" Margin="10 0 0 0" Grid.Column="1" Content="Pizza Builder" Background="White"/>
                <Button Cursor="Hand" x:Name="DBreakfastButton" Margin="10 0 0 0" Click="DBreakfastButton_Click" Grid.Column="2" Content="Breakfast" Background="White"/>
                <Button Cursor="Hand" x:Name="DSnacksButton" Margin="0 0 0 0" Click="DSnacksButton_Click" Grid.Column="3" Content="Snacks" Background="White"/>
                <Button Cursor="Hand" x:Name="DMainDishButton" Margin="0 0 0 0" Click="DMainDishButton_Click" Grid.Column="4" Content="MainDish" Background="White"/>
                <Button Cursor="Hand" x:Name="DDesertButton" Margin="0 0 0 0" Click="DDesertButton_Click" Grid.Column="5" Content="Desert" Background="White"/>
                <TextBox x:Name="DSearchBox" Text="Enter tags" Margin="10 0 0 0" Grid.Column="6"/>
                <Button Cursor="Hand" x:Name="DSearchButton" Click ="DSearchButton_Click" Margin="0 0 0 0" Grid.Column="7" Content="Search" Background="White"/>
                <Button Cursor="Hand" x:Name="DBookmarksButton" Click="DBookmarksButton_Click" Margin="10 0 10 0" Grid.Column="8" Content="Log In" Background="White"/>

            </Grid>
            <!-- Images -->
            <Grid>
                <Button Content="Spaghetti" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="91" Click="MD_1"/>
                <Button Content="Chicken Soup" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="91" Click="MD_2"/>
                <Button Content="Hamburger" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="91" Height="20" Click="MD_3"/>
                <Button Content="Sheperd's pie" HorizontalAlignment="Left" Margin="10,189,0,0" VerticalAlignment="Top" Width="91" Click="MD_4"/>
            </Grid>
            <!-- Text -->
            <Grid>
                <Viewbox Margin="320 0 0 0" HorizontalAlignment="Left" Width="300">
                    <TextBlock MaxWidth="200" Margin="5 0 5 0" TextWrapping="Wrap" Foreground="White"><Run Text="For the stock"/><LineBreak/><Run Text=" 1 whole, small-sized chicken, (roughly 1.2-1.4kg) feet and neck included (optional)"/><LineBreak/><Run Text=" 2 large onions, finely chopped"/><LineBreak/><Run Text=" 1/2 tablespoon (loosely packed) finely chopped sage"/><LineBreak/><Run Text=" 1 teaspoon (loosely packed) finely chopped thyme"/><LineBreak/><Run Text=" 1/2 tablespoon apple cider vinegar"/><LineBreak/><Run Text=" 1 large carrot"/><LineBreak/><Run Text=" 1 large stick of celery"/><LineBreak/><Run Text=" For the soup"/><LineBreak/><Run Text=" 2 litres of chicken stock (extracted from stock-making recipe)"/><LineBreak/><Run Text=" 2 cups shredded chicken meat (extracted from stock making recipe)"/><LineBreak/><Run Text=" 1 1/2 cups finely chopped celery"/><LineBreak/><Run Text=" 1 1/2 cups finely chopped carrots"/><LineBreak/><Run Text=" 2 - 5 cloves garlic minced garlic (a garlic crusher works a treat)"/><LineBreak/><Run Text=" 1 tablespoon finely grated ginger"/><LineBreak/><Run Text=" 1 teaspoon finely grated turmeric"/><LineBreak/><Run Text=" 1 cup (loosely packed) finely chopped parsley"/><LineBreak/><Run Text=" 1/2 cup (loosely packed) finely chopped fresh coriander"/><LineBreak/><Run Text=" 1 can green lentils, drained and rinsed (optional)"/><LineBreak/><Run Text="generous seasoning of sea salt"/><LineBreak/><Run/></TextBlock>
                </Viewbox>
                <Viewbox Margin="620 0 0 0" HorizontalAlignment="Left" Width="300">
                    <TextBlock MaxWidth="200" Margin="5 0 5 0" TextWrapping="Wrap" Foreground="White"><Run Text="Chicken soup"/><LineBreak/><Run/></TextBlock>
                </Viewbox>
                <Viewbox Margin="920 0 0 0" HorizontalAlignment="Left" Width="300">
                    <TextBlock MaxWidth="200" Margin="5 0 5 0" FontSize="10" TextWrapping="Wrap" Foreground="White"><Run Text="Method"/><LineBreak/><Run Text="For stock"/><LineBreak/><Run Text="Prepare the stock by placing the whole chicken (plus any additional bits: feet, necks, wingettes etc) in a large stock pot, with the herbs, vegetables, onions and vinegar. Cover with cold water."/><LineBreak/><Run Text="Cook at a strong simmer, partially covered, for roughly 90 minutes. The chicken will be ready when the meat starts to separate easily from the bone."/><LineBreak/><Run Text="Remove the carrots and celery from the cooking pot and discard. Drain liquid from the meat and set aside (you can keep the onions and herbs in the stock)."/><LineBreak/><Run Text="Separate the meat from the bone and set aside 2 cups of shredded chicken for your soup (any leftovers can be used in chicken sandwiches)."/><LineBreak/><Run Text="Measure out your stock – you should have roughly two litres. If you have more, you can reduce the liquid. If you have less, just add additional water."/><LineBreak/><Run Text="Now you are ready to make your soup."/><LineBreak/><Run Text="For soup"/><LineBreak/><Run Text="Add the finely chopped celery, carrots and a dash of olive oil to the bottom of a cooking pot on a medium heat. Let it simmer for 3-5 minutes or until the vegetables soften."/><LineBreak/><Run Text="Add your stock to the cooking pot, together with the chicken meat. Bring to a gentle simmer and cook for 5-10 minutes or until vegetables soften further."/><LineBreak/><Run Text="Add the garlic and spices and simmer for another minute or so. Season generously with sea salt. Remove the pot from the heat and stir through the coriander and parsley. Serve immediately."/><LineBreak/><Run/></TextBlock>
                </Viewbox>
            </Grid>
        </StackPanel>

    </Border>
</Window>
