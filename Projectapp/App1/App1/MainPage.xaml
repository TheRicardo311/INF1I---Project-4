<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage"
             Title="Recipes">

    <Grid x:Name="TopBar" Margin="0" BackgroundColor="Black">
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Dropdown ?-->
        <Button Text="D" TextColor="Black" Grid.Row="0" Grid.Column="0" FontSize="Large"  Margin="20,0,0,0"/>

        <!-- Filter button-->
        <Button Image="filter.png" Grid.Row="0" Grid.Column="2" Margin="0,0,20,0" Clicked="Filter_Button"/>

        <!-- Scrollview -->
        <ScrollView Margin="20,0,20,20" Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3">
            <StackLayout>
                <BoxView Color="Blue" HeightRequest="300"/>
                <BoxView Color="Red" HeightRequest="300"/>
                <BoxView Color="HotPink"  HeightRequest="300"/>
                <BoxView Color="Ivory" HeightRequest="300"/>
                <BoxView Color="GreenYellow" HeightRequest="300"/>
            </StackLayout>
        </ScrollView>

    </Grid>

</ContentPage>